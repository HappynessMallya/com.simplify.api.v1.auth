<?xml version="1.0" ?>
    <doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="App\Domain\Model\User\User" table="auth_user">
        <id name="userId" type="UserId" column="user_id" />
        <field name="companyId" type="CompanyId" column="company_id" />
        <field name="username" type="string" length="180" unique="true" nullable="true" />
        <field name="email" type="string" length="180" unique="true" />
        <field name="enabled" type="boolean" nullable="true" />
        <field name="salt" type="string" nullable="true" />
        <field name="password" type="string" />
        <field name="lastLogin" type="datetime" column="last_login" nullable="true" />
        <field name="confirmationToken" type="string" column="confirmation_token" length="180" unique="true" nullable="true" />
        <field name="passwordRequestedAt" type="datetime" column="password_requested_at" nullable="true" />
        <field name="roles" type="array" />
        <field name="status" type="UserStatus" column="status" length="50" />
        <field name="createdAt" column="created_at" type="datetime" />
        <field name="userType" column="user_type" type="UserType" length="50" />
    </entity>
</doctrine-mapping>
